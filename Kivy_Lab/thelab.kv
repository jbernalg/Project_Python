# llamado del diseño a ejecutar
GridLayoutExample:

# diseño de cuadricula
<GridLayoutExample@GridLayout>:
    # especificar filas rows
    # especidificar columnas cols
    #cols: 3
    rows: 2
    Button:
        text: 'A'
        size_hint: None, 1
        width: '60dp'
    BoxLayoutExample:
    Button:
        text: 'C'
    Button:
        text: 'D'
        size_hint: None, 1
        width: '60dp'
    Button:
        text: 'E'
    Button:
        text: 'F'


# diseño de anclado
<AnchorLayoutExample>:
    # valores que puede tomar: right, left, center
    anchor_x: 
    # valores que puede tomar: bottom, top, center
    anchor_y: 'top'
    BoxLayout:
        size_hint: .2, .2  # 20% tanto en el alto como en el ancho del boton
        Button:
            text: 'A'
        Button:
            text: 'B'


# diseño de caja
<BoxLayoutExample>:
    orientation: 'horizontal'
    Button:
        text: 'A'
        size_hint: .5, .5
        # size: '40dp', '40dp'
        # width: '100dp'
        # height: '80dp'

        # x, center_x, right
        # y, center_y, top
        pos_hint: {'center_y': .5}
    
    BoxLayout:
        orientation: 'vertical'   
        spacing: '5dp' 
        Button:
            text: 'B1'
        Button:
            text: 'B2'
        Button:
            text: 'B3'
        Button:
            text: 'B4'

    Label:
        text: 'C'

# diseño principal
<MainWidget>:
    Button:
        text: 'Prueba'
        size: '100dp', '80dp'
        pos: '200dp', '200dp'
    Button:
        text: 'Prueba2'
        size: '100dp', '80dp' # fija un tamaño al boton
        pos: '100dp', '200dp'
        color: 0, 0, 1, 1
    Label:
        text: 'Prueba2'
        size: '100dp', '80dp'
        pos: '150dp', '250dp'
        color: 1, 0, 0, 1

