# diseño de widgets click boton
<WidgetsExample>:
    cols:3
    ToggleButton:
        text: 'OFF'
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: '100dp'
    Button:
        text: 'Click Aqui'
        on_press: root.on_button_click()
        disabled: not root.count_enabled 
    Label:
        text: root.my_text
        font_name: 'fonts/Lcd.ttf'
        font_size: '80dp' 
        color: 1, .5, 1, 1
    Switch:

        id: my_switch
        on_active: root.on_switch_active(self)
        size_hint: None, 1  # mismo tamaño que el toggle button para mejor compatibilidad
        width: '100dp'
        active: True
    Slider:
        id: my_slider
        min: 0
        max: 100
        value: 50 # indica el valor de la posicion inicial del slider
        # on_value: root.on_slider_value(self)
        orientation: 'vertical'
        disabled: not my_switch.active
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: str(int(my_slider.value))
            font_name: 'fonts/Lcd.ttf'
            font_size: '80dp' 
            color: 1, .5, 1, 1
        ProgressBar:
            max: 100
            value: my_slider.value
    TextInput:
        id: my_text_input
        size_hint: None, 1
        width: '100dp'
        text: 'bienvenidos'
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: 'Tu nombre es: ' + root.text_input_str


