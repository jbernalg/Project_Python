# llamado del diseño a ejecutar
PageLayoutExample:


# Diseño de pagina
<PageLayoutExample@PageLayout>:
    # agregamos los diseños antes creados
    MainWidget:
    BoxLayoutExample:
    AnchorLayoutExample:
    GridLayoutExample


# diseño de desplazamiento
<ScrollViewExample@ScrollView>:
    
    # agregamos el diseño de pila anterior
    StackLayoutExample:
        # agregamos el tamaño del diseño de pila
        size_hint: 1, None  # agregamos el tamaño del diseño de pila
        # permite que el diseño trabaje con la altura minima de los botones al cambiar el tamaño de la ventana
        height: self.minimum_height  


# diseño de pila
